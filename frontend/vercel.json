{
  "version": 2,
  "name": "cortefacil-frontend",
  "buildCommand": "npm install && npx vite build --mode production",
  "outputDirectory": "dist",
  "framework": "vite",
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://api.cortefacil.app/api",
    "VITE_APP_NAME": "Cortef√°cilApp",
    "VITE_APP_VERSION": "1.0.0"
  }
}