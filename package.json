{
  "name": "cortefacil-monorepo",
  "version": "1.0.0",
  "description": "CorteFÃ¡cil - Sistema de Agendamentos (Frontend + Backend)",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend/server && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend/server && npm run build",
    "build:prod": "cd frontend && npm run build:prod && cd ../scripts && node build-server.js",
    "deploy:build": "npm run build:prod && node scripts/prepare-deploy.js",
    "deploy:hostinger": "node deploy.js",
    "install:all": "npm install && cd frontend && npm install && cd ../backend/server && npm install",
    "start:frontend": "cd frontend && npm run preview",
    "start:backend": "cd backend/server && npm start",
    "lint": "cd frontend && npm run lint",
    "clean": "rimraf frontend/dist backend/server/dist dist deploy"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.1"
  },
  "workspaces": [
    "frontend",
    "backend/server"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}