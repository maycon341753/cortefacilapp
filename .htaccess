# ========================================
# CorteFácil - Configurações Apache
# Otimizado para Hostinger e Desenvolvimento Local
# ========================================

# Habilitar mod_rewrite
RewriteEngine On

# Configurações de segurança básicas
Options -Indexes
ServerSignature Off

# ========================================
# PROTEÇÃO DE ARQUIVOS SENSÍVEIS
# ========================================

# Proteger arquivos de banco de dados
<Files "*.sql">
    Require all denied
</Files>

# Proteger arquivos de configuração
<FilesMatch "^(database|config|Database)\.php$">
    Require all denied
</FilesMatch>

# Proteger arquivos de teste (remover em produção)
<FilesMatch "^teste_.*\.php$">
    Require all denied
</FilesMatch>

# Proteger arquivos de documentação
<FilesMatch "\.(md|txt|log)$">
    Require all denied
</FilesMatch>

# Proteger arquivos ocultos
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# ========================================
# REDIRECIONAMENTOS E URLs AMIGÁVEIS
# ========================================

# Página padrão
DirectoryIndex index.php

# URLs amigáveis - verificar se arquivo/diretório não existe
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirecionamentos para páginas principais
RewriteRule ^login/?$ login.php [L,QSA]
RewriteRule ^register/?$ register.php [L,QSA]
RewriteRule ^logout/?$ logout.php [L,QSA]

# Dashboards
RewriteRule ^cliente/?$ cliente/dashboard.php [L,QSA]
RewriteRule ^parceiro/?$ parceiro/dashboard.php [L,QSA]
RewriteRule ^parceiro/salao/?$ parceiro/cadastrar_salao.php [L,QSA]

# API endpoints (se necessário no futuro)
RewriteRule ^api/(.*)$ api/$1.php [L,QSA]

# ========================================
# SEGURANÇA
# ========================================

# Bloquear acesso a arquivos sensíveis
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

# Proteger arquivos de configuração
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear acesso direto a arquivos PHP de configuração
<FilesMatch "^(config|database|auth)\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Prevenir listagem de diretórios
