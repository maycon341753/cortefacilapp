# ========================================
# CorteFácil - Configurações Apache
# ========================================

# Habilitar mod_rewrite
RewriteEngine On

# ========================================
# REDIRECIONAMENTOS PRINCIPAIS
# ========================================

# Redirecionar para index.html como página padrão
DirectoryIndex index.html index.php

# URLs amigáveis e redirecionamentos
RewriteRule ^entrar/?$ login.html [L]
RewriteRule ^cadastro/?$ register.html [L]
RewriteRule ^agendar/?$ booking.html [L]
RewriteRule ^pagamento/?$ payment.html [L]
RewriteRule ^cliente/?$ dashboard-client.html [L]
RewriteRule ^parceiro/?$ dashboard-partner.html [L]

# ========================================
# SEGURANÇA
# ========================================

# Bloquear acesso a arquivos sensíveis
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

# Proteger arquivos de configuração
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear acesso direto a arquivos PHP de configuração
<FilesMatch "^(config|database|auth)\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Prevenir listagem de diretórios
Options -Indexes

